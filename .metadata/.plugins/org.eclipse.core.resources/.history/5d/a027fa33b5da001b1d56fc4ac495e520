
public class MathematicalOperators {
	public static void main(String[] args) {
		int x = 4;
		int y = 2;
		int z;
		
//		simple add
		z = x + y;
		System.out.println(z);
//		simple sub
		z = x- y;
		System.out.println(z);
		
//		simple mult
		z = x*y;
		System.out.println(z);
//		simple div
		z = x/y;
		System.out.println(z);
		
//		simple mod
		z = x%y;
		System.out.println(z);
//		float vs. int
		
		float f = 3.6f;
		int i = 22;
		int result = (int)f + i;

		System.out.println(result);
		
		
				
	
}
}
